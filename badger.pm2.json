{
  "name"        : "badger",
  "script"      : "bin/www",
  "ignoreWatch" : ["[\\/\\\\]\\./", "node_modules"],
  "watch"       : "true",
  "instances"   : "1",
  "env": {
      "PORT": 3000,
      "NODE_ENV": "development"
  },
  "env_production" : {
     "BADGER_OUTPUT_DIR":"/tmp/badges",
     "NODE_ENV": "production",
     "BADGER_PRINTER":"badges",
     "BADGER_SESSION_TYPE":"redis"
  }

}
