extends layout

block content
    div(class="col-sm-6 col-sm-offset-3")
        +panel-default('Login')
            - if (messages.loginerror)
                +alert-i-danger(messages.loginerror.join(', '))

            form(class="form-horizontal" method="POST" action="/login")
                input(type="hidden", name='_csrf',value=csrfToken)
                .form-group
                    label(for="username" class="col-sm-2 control-label") Username
                    div(class="col-sm-10")
                        input.form-control(type="text",placeholder="Username",name="auth[username]",value=auth.username,id='username')
                .form-group
                    label(for="password" class="col-sm-2 control-label") Password
                    div(class="col-sm-10")
                        input.form-control(type="password",placeholder="Password",name="auth[password]")
                .form-group
                    div(class='col-sm-1 col-sm-offset-10')
                        button.btn.btn-primary(type="submit",name="Login") Login


append scripts
    script.
        $().ready(function () {
            $('#username').focus();
        });
