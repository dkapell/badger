extends ../layout

block content
    ol(class='breadcrumb')
        li
            a(href='/notes') Notes
        li(class='active')= note.id
    h2= 'Note ' + note.id + ' for ' + attendee.name

    div(class='alert alert-info',id='alert-messages')

    div(class='row')
        div(class='col-sm-12')
            table(class='table table-striped table-condensed')
                thead
                    tr
                        th Contents
                        th Cleared
                        th Created
                tbody
                    tr
                        td= note.contents
                        td= note.cleared?'Yes':'No'
                        td= moment(note.created).format('MMMM DD YYYY, HH:mm:ss')

    if(checkPermission('eventadmin'))
        a(class='btn btn-default' href='/notes/#{note.id}/edit')
            span(class='glyphicon glyphicon-edit')
            |  Edit

