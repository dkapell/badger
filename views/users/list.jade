extends ../layout

block content
    h2 Users List
    table(class='table table-striped table-condensed')
        thead
            tr
                th Name
                th Username
                th Admin
                th Events
        tbody
            for user in users
                tr
                    td
                        a(href='/users/#{user.id}')= user.name
                    td= user.username
                    td= user.admin?'Yes':'No'
                    td
                        ul
                            for event in user.events
                                li #{event.name}: #{event.admin?'Admin':'User'}
